{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": []
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
