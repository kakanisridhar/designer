  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Server package",
      "program": "${workspaceFolder}/packages/server/src/main.ts",
      "preLaunchTask": "npm: dev",
      "outFiles": ["${workspaceFolder}/packages/server/dist/**/*.js"],
      "localRoot": "${workspaceFolder}",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}/packages/**/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    }
  ]
}